<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-lg-6 offset-lg-3">SignUp on Tent</h1>
    <div class="col-lg-6 offset-lg-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter valid username</div>
            </div> 
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter valid email id</div>
            </div> 
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">Enter a strong password</div>
            </div> 
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>