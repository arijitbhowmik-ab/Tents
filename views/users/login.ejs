<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-lg-6 offset-lg-3 login-head">Login on Tent</h1>
    <div class="col-lg-6 offset-lg-3 login-box-a">
        <!-- <div class=" login-box-b"> -->
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Enter valid username</div>
                </div> 
                 
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                    <div class="invalid-feedback">Enter a strong password</div>
                </div> 
                <button class="btn btn-success login-btn">Login</button> 
            </form>
            <hr>
            <div  class="create">
               <span>New to Tent ?</span>
               <span><a href="/signup" class="nav-link text-center">Create a new account</a></span>
            </div>
            
        <!-- </div> -->
    </div>
</div>