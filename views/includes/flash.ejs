<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show col-lg-6 offset-lg-3 mt-2 flash-style notificaion" id="notificaion" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

<% } %> 



<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2 flash-style" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

